doctype html
html
  head
    title Image Albums
    link(rel='stylesheet', href='/lib/bootswatch-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    block styles 

  body
    nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Image Albums
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            if user
              li
                a(href='/albums') Public Albums
              li
                a(href='/faves') Favorite Images  
              
          ul.nav.navbar-nav.navbar-right
            if !user
              li
                a(href='/register') Register
              li
                a(href='/login') Login
            else
              li
                a(href='/albums/mine')= 'Logged in as ' + user.email
              li
                a(href='/users/logout') Logout
              li
                a(href='/albums/mine') My Albums


    .container
      block content

    script(src='/lib/jquery/dist/jquery.min.js')
    script(src='/lib/bootswatch-dist/js/bootstrap.min.js')
    block scripts
